@model EmployeeManagementSystem.Models.User
@{
    ViewData["Title"] = "Admin Profile";
}

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<!-- Animate.css -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    :root {
        --primary-color: #6c5ce7;
        --secondary-color: #00cec9;
        --dark-color: #2d3436;
        --light-color: #f8f9fa;
        --warning-color: #fdcb6e;
    }

    .profile-card {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .profile-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 1.5rem;
    }

    .profile-image-container {
        padding: 1.5rem;
        text-align: center;
    }

    .profile-image {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .profile-details {
        padding: 2rem;
    }

    .detail-item {
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }

    .detail-label {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 0.25rem;
    }

    .detail-value {
        color: #6c757d;
    }

    .btn-edit {
        background-color: var(--warning-color);
        border: none;
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-edit:hover {
            background-color: #e8b948;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(253, 203, 110, 0.3);
        }

    .empty-avatar {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #adb5bd;
        border: 5px solid white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container py-4">
    <div class="profile-card animate__animated animate__fadeIn">
        <div class="profile-header">
            <h2><i class="fas fa-user-cog me-2"></i> Admin Profile</h2>
        </div>

        <div class="row">
            <div class="col-md-4 profile-image-container">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="~/images/@Model.ImagePath" class="profile-image" alt="Profile Picture" />
                }
                else
                {
                    <div class="empty-avatar">
                        <i class="fas fa-user fa-4x"></i>
                    </div>
                }
            </div>

            <div class="col-md-8 profile-details">
                <div class="detail-item">
                    <div class="detail-label">Full Name</div>
                    <div class="detail-value">@Model.Name</div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">Email</div>
                    <div class="detail-value">@Model.Email</div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">Contact</div>
                    <div class="detail-value">@Model.Contact</div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">Role</div>
                    <div class="detail-value">@Model.Role</div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">Member Since</div>
                    <div class="detail-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
                </div>

                <div class="mt-4">
                    <a href="@Url.Action("EditProfile", "Account")" class="btn btn-edit">
                        <i class="fas fa-edit me-2"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>