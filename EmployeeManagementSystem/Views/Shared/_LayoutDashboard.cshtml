<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Dashboard</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <style>
        :root {
            --primary-color: #6c5ce7;
            --secondary-color: #00cec9;
            --dark-color: #2d3436;
            --light-color: #f8f9fa;
            --success-color: #00b894;
            --warning-color: #fdcb6e;
            --danger-color: #ff7675;
            --sidebar-width: 280px;
            --top-nav-height: 70px;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fa;
            color: var(--dark-color);
            overflow-x: hidden;
        }

        /* Sidebar Styles */
        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: linear-gradient(180deg, var(--primary-color) 0%, #5649c0 100%);
            color: white;
            transition: all 0.3s ease;
            z-index: 1000;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            height: var(--top-nav-height);
            display: flex;
            align-items: center;
        }

        .sidebar-brand {
            font-weight: 700;
            font-size: 1.3rem;
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

            .sidebar-brand i {
                margin-right: 12px;
                font-size: 1.5rem;
            }

        .nav-sidebar {
            padding: 20px 0;
        }

            .nav-sidebar .nav-item {
                margin-bottom: 5px;
            }

            .nav-sidebar .nav-link {
                color: rgba(255, 255, 255, 0.85);
                padding: 12px 25px;
                border-radius: 0 30px 30px 0;
                transition: all 0.3s ease;
                font-weight: 500;
                margin: 0 10px;
                display: flex;
                align-items: center;
            }

                .nav-sidebar .nav-link:hover {
                    color: white;
                    background-color: rgba(255, 255, 255, 0.15);
                    transform: translateX(5px);
                }

                .nav-sidebar .nav-link.active {
                    color: white;
                    background-color: rgba(255, 255, 255, 0.2);
                    font-weight: 600;
                    transform: translateX(5px);
                }

                .nav-sidebar .nav-link i {
                    width: 24px;
                    margin-right: 12px;
                    font-size: 1.1rem;
                    text-align: center;
                }

        /* Main Content Styles */
        .main-content {
            margin-left: var(--sidebar-width);
            min-height: 100vh;
            transition: all 0.3s ease;
        }

        /* Top Navigation */
        .top-navbar {
            background-color: white;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            padding: 0 25px;
            height: var(--top-nav-height);
            position: sticky;
            top: 0;
            z-index: 100;
            display: flex;
            align-items: center;
        }

        .sidebar-toggle {
            background: none;
            border: none;
            color: var(--dark-color);
            font-size: 1.2rem;
            margin-right: 15px;
            transition: all 0.3s ease;
        }

            .sidebar-toggle:hover {
                color: var(--primary-color);
                transform: scale(1.1);
            }

        .user-dropdown {
            margin-left: auto;
        }

            .user-dropdown .dropdown-toggle {
                display: flex;
                align-items: center;
                padding: 5px 10px;
                border-radius: 50px;
                transition: all 0.3s ease;
                text-decoration: none;
                color: var(--dark-color);
            }

                .user-dropdown .dropdown-toggle:hover {
                    background-color: rgba(108, 92, 231, 0.1);
                }

            .user-dropdown img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                object-fit: cover;
                margin-right: 10px;
                border: 2px solid rgba(108, 92, 231, 0.3);
            }

            .user-dropdown .user-name {
                font-weight: 500;
                margin-right: 5px;
            }

        .dropdown-menu {
            border: none;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 10px 0;
            margin-top: 10px;
        }

        .dropdown-item {
            padding: 8px 20px;
            font-weight: 500;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
        }

            .dropdown-item i {
                width: 20px;
                margin-right: 10px;
                text-align: center;
            }

            .dropdown-item:hover {
                background-color: rgba(108, 92, 231, 0.1);
                color: var(--primary-color);
                transform: translateX(3px);
            }

        .dropdown-divider {
            margin: 5px 0;
            border-color: rgba(0, 0, 0, 0.05);
        }

        /* Page Content */
        .page-content {
            padding: 30px;
            background-color: #f5f7fa;
            min-height: calc(100vh - var(--top-nav-height));
        }

        /* Cards */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            margin-bottom: 25px;
            overflow: hidden;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            }

        .card-header {
            background-color: white;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            font-weight: 600;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .card-header i {
                color: var(--primary-color);
                font-size: 1.2rem;
            }

        /* Responsive */
        @@media (max-width: 992px) {
            .sidebar {
                left: -var(--sidebar-width);
            }

            .main-content {
                margin-left: 0;
            }

            .sidebar.active {
                left: 0;
            }

            .main-content.active {
                margin-left: var(--sidebar-width);
            }
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="#" class="sidebar-brand">
                <i class="fas fa-users-cog"></i> EMP Dashboard
            </a>
        </div>
        <ul class="nav flex-column nav-sidebar">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "EmployeeInfo" ? "active" : "")"
                   href="@Url.Action("EmployeeInfo", "Employee")">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Employees" ? "active" : "")"
                   href="@Url.Action("Employees", "Employee")">
                    <i class="fas fa-users"></i> Employees
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Attendance" ? "active" : "")"
                   href="@Url.Action("Attendance", "Employee")">
                    <i class="fas fa-user-check"></i> Attendance
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "LeaveRequests" ? "active" : "")"
                   href="@Url.Action("LeaveRequests", "Employee")">
                    <i class="fas fa-calendar-check"></i> Leave Requests
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Salaries" ? "active" : "")"
                   href="@Url.Action("Salaries", "Employee")">
                    <i class="fas fa-money-bill-wave"></i> Salaries
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "OrganizationInfo" ? "active" : "")"
                   href="@Url.Action("OrganizationInfo", "Settings")">
                    <i class="fas fa-cog"></i> Settings
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Profile", "Account")">
                    <i class="fas fa-user-circle me-2"></i> Admin Profile
                </a>
            </li>

        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Top Navigation -->
        <nav class="top-navbar">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <div class="user-dropdown">
                <a href="#" class="dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    @if (!string.IsNullOrEmpty(User.FindFirst("ImagePath")?.Value))
                    {
                        <img src="~/images/@User.FindFirst("ImagePath")?.Value" alt="User">
                    }
                    else
                    {
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="fas fa-user"></i>
                        </div>
                    }
                    <span class="user-name d-none d-lg-inline">@User.Identity?.Name</span>
                    <i class="fas fa-chevron-down ms-1 small d-none d-lg-inline"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                            <i class="fas fa-user me-2"></i> Profile
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("OrganizationInfo", "Settings")">
                            <i class="fas fa-cog me-2"></i> Settings
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Page Content -->
        <div class="page-content">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('mainContent').classList.toggle('active');

            // Store sidebar state in localStorage
            const isActive = document.getElementById('sidebar').classList.contains('active');
            localStorage.setItem('sidebarActive', isActive);
        });

        // Check for saved sidebar state
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarActive = localStorage.getItem('sidebarActive') === 'true';
            if (sidebarActive && window.innerWidth < 992) {
                document.getElementById('sidebar').classList.add('active');
                document.getElementById('mainContent').classList.add('active');
            }
        });

        // Highlight active nav link
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>