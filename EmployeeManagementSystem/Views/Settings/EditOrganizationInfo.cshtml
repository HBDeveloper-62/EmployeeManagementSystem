@model EmployeeManagementSystem.Models.OrganizationInfo
@{
    ViewData["Title"] = "Edit Organization Information";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="edit-organization-page">
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="page-title">
                        <i class="fas fa-building me-2"></i>Edit Organization Information
                    </h2>
                    <a asp-action="OrganizationInfo" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to View
                    </a>
                </div>
                <hr class="mt-2">
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form asp-action="EditOrganizationInfo" asp-controller="Settings" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="OrganizationName" class="form-label">
                                        <i class="fas fa-signature me-1 text-muted"></i> Organization Name
                                    </label>
                                    <input asp-for="OrganizationName" class="form-control" placeholder="Enter organization name">
                                    <span asp-validation-for="OrganizationName" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label">
                                        <i class="fas fa-envelope me-1 text-muted"></i> Email Address
                                    </label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter email address">
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Phone" class="form-label">
                                        <i class="fas fa-phone me-1 text-muted"></i> Phone Number
                                    </label>
                                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number">
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>

                                <div class="col-12 mb-3">
                                    <label asp-for="Address" class="form-label">
                                        <i class="fas fa-map-marker-alt me-1 text-muted"></i> Address
                                    </label>
                                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter full address"></textarea>
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>

                                <div class="col-12 mb-4">
                                    <div class="card border-0 bg-light">
                                        <div class="card-body">
                                            <h5 class="card-title mb-3">
                                                <i class="fas fa-image me-2 text-muted"></i> Organization Logo
                                            </h5>

                                            <div class="file-upload-wrapper">
                                                <input type="file" name="logoFile" class="form-control" id="logoUpload">
                                                <label for="logoUpload" class="file-upload-label">
                                                    <i class="fas fa-cloud-upload-alt me-2"></i>
                                                    <span>Choose a file or drag it here</span>
                                                </label>

                                                @if (!string.IsNullOrEmpty(Model.LogoPath))
                                                {
                                                    <div class="current-logo mt-3">
                                                        <p class="mb-2 small text-muted">Current Logo:</p>
                                                        <img src="@Model.LogoPath" class="img-thumbnail" style="max-height: 120px;">
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-flex justify-content-end gap-2">
                                        <button type="submit" class="btn btn-primary px-4">
                                            <i class="fas fa-save me-2"></i>Save Changes
                                        </button>
                                        <a asp-action="OrganizationInfo" class="btn btn-outline-secondary px-4">
                                            <i class="fas fa-times me-2"></i>Cancel
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-lightbulb me-2 text-primary"></i> Tips
                        </h5>
                        <ul class="list-unstyled tips-list">
                            <li class="mb-3">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Use a high-quality logo image (recommended: 500×500px)
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Keep contact information up-to-date
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                PNG format works best for logos
                            </li>
                            <li>
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Include complete address for location services
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .edit-organization-page {
        padding: 2rem 0;
    }

    .page-title {
        font-weight: 600;
        color: #2c3e50;
        font-size: 1.75rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1);
        }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .file-upload-wrapper {
        position: relative;
    }

    .file-upload-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        border: 2px dashed #dee2e6;
        border-radius: 0.5rem;
        background-color: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .file-upload-label:hover {
            border-color: #4361ee;
            background-color: #f8f9fa;
        }

        .file-upload-label span {
            margin-top: 0.5rem;
            color: #6c757d;
        }

    #logoUpload {
        opacity: 0;
        position: absolute;
        z-index: -1;
    }

    .current-logo {
        text-align: center;
    }

    .tips-list li {
        padding: 0.5rem 0;
        border-bottom: 1px solid #f1f3f5;
    }

    @@media (max-width: 768px) {
        .edit-organization-page {
            padding: 1rem 0;
        }

        .page-title {
            font-size: 1.5rem;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Preview logo when selected
        document.getElementById('logoUpload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const preview = document.querySelector('.current-logo');
                    if (!preview) {
                        const uploadLabel = document.querySelector('.file-upload-label');
                        const newPreview = document.createElement('div');
                        newPreview.className = 'current-logo mt-3';
                        newPreview.innerHTML = `
                            <p class="mb-2 small text-muted">Selected Logo:</p>
                            <img src="${event.target.result}" class="img-thumbnail" style="max-height: 120px;">
                        `;
                        uploadLabel.parentNode.insertBefore(newPreview, uploadLabel.nextSibling);
                    } else {
                        preview.querySelector('img').src = event.target.result;
                        preview.querySelector('p').textContent = 'Selected Logo:';
                    }
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}