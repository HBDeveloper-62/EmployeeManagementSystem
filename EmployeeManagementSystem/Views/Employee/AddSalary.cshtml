@model EmployeeManagementSystem.Models.Salary

@{
    ViewData["Title"] = "Add Salary";
    var employees = ViewBag.Employees as List<EmployeeManagementSystem.Models.Employee>;
}

<h2>➕ Add Salary</h2>

<div class="mb-3 d-flex justify-content-between">
    <a class="btn btn-secondary" href="~/Employee/Salaries">
        🔙 Back
    </a>
</div>

<form asp-action="AddSalary" method="post">
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <select asp-for="EmployeeId" class="form-control">
            <option value="">-- Select Employee --</option>
            @if (employees != null)
            {
                foreach (var emp in employees)
                {
                    <option value="@emp.Id">@emp.FullName</option>
                }
            }
        </select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BasicSalary"></label>
        <input asp-for="BasicSalary" type="number" class="form-control" />
        <span asp-validation-for="BasicSalary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Allowance"></label>
        <input asp-for="Allowance" type="number" class="form-control" />
        <span asp-validation-for="Allowance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Deductions"></label>
        <input asp-for="Deductions" type="number" class="form-control" />
        <span asp-validation-for="Deductions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SalaryMonth"></label>
        <input asp-for="SalaryMonth" type="month" class="form-control" />
        <span asp-validation-for="SalaryMonth" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">💾 Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
