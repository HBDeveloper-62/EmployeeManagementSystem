@{
    ViewData["Title"] = "Careers";
    Layout = "~/Views/Shared/_LayoutStartup.cshtml";
}

<div class="careers-page">
    <section class="hero-section bg-primary text-white py-5">
        <div class="container py-5">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4">Join Our Team</h1>
                    <p class="lead mb-5">Help us build the future of HR technology while growing your career</p>
                    <a href="#open-positions" class="btn btn-light btn-lg px-4">
                        View Open Positions <i class="fas fa-arrow-down ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="benefits-section py-5">
        <div class="container">
            <h2 class="section-title text-center mb-5">Why Work With Us?</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="benefit-card p-4 rounded-3 shadow-sm h-100">
                        <div class="benefit-icon mb-3">
                            <i class="fas fa-bolt fa-2x text-primary"></i>
                        </div>
                        <h3>Growth Opportunities</h3>
                        <p>Continuous learning with training budgets, mentorship programs, and career pathing.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="benefit-card p-4 rounded-3 shadow-sm h-100">
                        <div class="benefit-icon mb-3">
                            <i class="fas fa-heart fa-2x text-primary"></i>
                        </div>
                        <h3>Great Benefits</h3>
                        <p>Comprehensive health coverage, generous PTO, retirement plans, and wellness programs.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="benefit-card p-4 rounded-3 shadow-sm h-100">
                        <div class="benefit-icon mb-3">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                        <h3>Awesome Culture</h3>
                        <p>Collaborative environment with team events, recognition programs, and work-life balance.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="open-positions" class="positions-section py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center mb-5">Open Positions</h2>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="position-card p-4 rounded-3 shadow-sm mb-4 bg-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h3>Senior .NET Developer</h3>
                                <div class="badge bg-primary mb-2">Engineering</div>
                                <p class="text-muted">Full-time | Remote or Boston, MA</p>
                            </div>
                            <a href="#" class="btn btn-outline-primary">Apply Now</a>
                        </div>
                    </div>

                    <div class="position-card p-4 rounded-3 shadow-sm mb-4 bg-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h3>HR Solutions Consultant</h3>
                                <div class="badge bg-success mb-2">Customer Success</div>
                                <p class="text-muted">Full-time | Chicago, IL</p>
                            </div>
                            <a href="#" class="btn btn-outline-primary">Apply Now</a>
                        </div>
                    </div>

                    <div class="position-card p-4 rounded-3 shadow-sm mb-4 bg-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h3>Product Manager</h3>
                                <div class="badge bg-info mb-2">Product</div>
                                <p class="text-muted">Full-time | San Francisco, CA</p>
                            </div>
                            <a href="#" class="btn btn-outline-primary">Apply Now</a>
                        </div>
                    </div>

                    <div class="text-center mt-5">
                        <p class="text-muted">Don't see your perfect role?</p>
                        <a href="#" class="btn btn-primary">Submit General Application</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="culture-section py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1471&q=80"
                         alt="Our Team Culture" class="img-fluid rounded-3 shadow">
                </div>
                <div class="col-lg-6">
                    <h2 class="section-title mb-4">Our Culture</h2>
                    <p>We believe in creating an environment where people can do their best work. Our culture is built on:</p>
                    <ul class="list-unstyled">
                        <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> <strong>Collaboration:</strong> Cross-functional teamwork and open communication</li>
                        <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> <strong>Innovation:</strong> Encouraging new ideas and creative problem-solving</li>
                        <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> <strong>Ownership:</strong> Empowering employees to take initiative</li>
                        <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> <strong>Balance:</strong> Flexible work arrangements and respect for personal time</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #4361ee 0%, #3a56d4 100%);
    }

    .section-title {
        font-size: 2.2rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .benefit-card, .position-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .benefit-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .position-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .benefit-icon i {
        transition: transform 0.3s ease;
    }

    .benefit-card:hover .benefit-icon i {
        transform: scale(1.1);
    }

    @@media (max-width: 768px) {
        .section-title {
            font-size: 1.8rem;
        }

        .position-card .d-flex {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>