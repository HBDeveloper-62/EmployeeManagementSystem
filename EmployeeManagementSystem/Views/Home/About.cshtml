@{
    ViewData["Title"] = "About Our Company";
    Layout = "~/Views/Shared/_LayoutStartup.cshtml";
}

<div class="about-page">
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="hero-title">Building the Future of Workforce Management</h1>
                    <p class="hero-text">Empowering organizations with innovative solutions since 2015</p>
                </div>
                <div class="col-lg-6">
                    <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80"
                         alt="Our Team" class="img-fluid rounded-3 shadow">
                </div>
            </div>
        </div>
    </section>

    <section class="mission-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="section-title">Our Mission</h2>
                    <p class="lead">To transform HR operations through intuitive, powerful technology that simplifies employee management and enhances organizational efficiency.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="values-section py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center mb-5">Our Core Values</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="value-card p-4 rounded-3 shadow-sm bg-white h-100">
                        <div class="value-icon mb-3">
                            <i class="fas fa-lightbulb fa-2x text-primary"></i>
                        </div>
                        <h3>Innovation</h3>
                        <p>We constantly push boundaries to deliver cutting-edge solutions that anticipate industry needs.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="value-card p-4 rounded-3 shadow-sm bg-white h-100">
                        <div class="value-icon mb-3">
                            <i class="fas fa-handshake fa-2x text-primary"></i>
                        </div>
                        <h3>Integrity</h3>
                        <p>We build trust through transparency, honesty, and ethical business practices.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="value-card p-4 rounded-3 shadow-sm bg-white h-100">
                        <div class="value-icon mb-3">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                        <h3>People First</h3>
                        <p>Our technology exists to serve people - both our clients and their employees.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="team-section py-5">
        <div class="container">
            <h2 class="section-title text-center mb-5">Leadership Team</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-lg-3 col-md-6">
                    <div class="team-card text-center p-4">
                        <img src="https://randomuser.me/api/portraits/women/44.jpg"
                             class="rounded-circle mb-3 shadow" width="150" height="150" alt="CEO">
                        <h3>Sarah Johnson</h3>
                        <p class="text-muted">CEO & Founder</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="team-card text-center p-4">
                        <img src="https://randomuser.me/api/portraits/men/32.jpg"
                             class="rounded-circle mb-3 shadow" width="150" height="150" alt="CTO">
                        <h3>Michael Chen</h3>
                        <p class="text-muted">Chief Technology Officer</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="team-card text-center p-4">
                        <img src="https://randomuser.me/api/portraits/women/68.jpg"
                             class="rounded-circle mb-3 shadow" width="150" height="150" alt="HR Director">
                        <h3>Emily Rodriguez</h3>
                        <p class="text-muted">Director of HR Solutions</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .hero-section {
        padding: 5rem 0;
    }

    .hero-title {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .hero-text {
        font-size: 1.25rem;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 2.2rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .value-card {
        transition: transform 0.3s ease;
    }

        .value-card:hover {
            transform: translateY(-5px);
        }

    .team-card img {
        object-fit: cover;
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.2rem;
        }

        .section-title {
            font-size: 1.8rem;
        }
    }
</style>